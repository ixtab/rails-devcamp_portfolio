<div class="container">
  <div class="row">
    
    <div class="col-md-7">
      <%= image_tag @portfolio_items.main_image unless @portfolio_items.main_image.nil? %>
      <hr>
      <h3>Tecnologías usadas:</h3>
      <% @portfolio_items.technologies.each do |t| %>
        <p><%= t.name %></p>
      <% end %>
    </div>

    <div class="col-md-5">
      <h2><%= @portfolio_items.title %></h2>
      <hr>
      <em><%= @portfolio_items.subtitle %></em>
      <p><%= @portfolio_items.body %></p>
      <br>
      <%= link_to "Ver todos los artículos del portflio", portfolios_path %>
    </div>

  </div>
</div>

      