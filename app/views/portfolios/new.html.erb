<h1>Crear un nuevo objeto del Portfolio</h1>

<%= form_for(@portfolio_item) do |form| %>
  <div class="field">
    <%= form.label :título %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :subtítulo %>
    <%= form.text_field :subtitle %>
  </div>

  <div class="field">
    <%= form.label :artículo %>
    <%= form.text_area :body %>
  </div>

  <div class="actions">
    <%= form.submit "Publicar Portfolio"%>
  </div>
<% end %>
