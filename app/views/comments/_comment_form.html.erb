<% unless current_user.is_a? GuestUser %>
  
  <%= form_for @comment, url: '#' do |f| %>
    <div class="form-group">
      <%= f.label :content, "Comentario:" %>

      <%= f.text_area :content, rows: 5, class: 'form-control' %>
    </div>
      <%= f.submit 'Publicar comentario', class: 'btn btn-primary btn-lg btn-block'%>
  <% end %>
<% end %>